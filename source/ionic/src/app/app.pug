ion-nav(#nav, [root]='rootPage')
ion-menu#en([content]='nav', [persistent]='true', [enabled]='menuLangEn')
  ion-content
    ion-item
      img(src='assets/images/logo.jpg')
    ion-list
      button(menuClose, ion-item, *ngFor='let p of pages_en', (click)='openPage(p)')
        ion-icon(name='{{p.icon}}', item-start)
        |         {{ p.title }}
      div(*ngIf='!isAdminFlag')
        button(menuClose, ion-item, *ngFor='let i of inventoryPages', (click)='openInventories($event, i)')
          ion-icon(name='{{i.icon}}', item-start)
          |           {{ i.title }}
      div(*ngIf='!isAdminFlag')
        button(menuClose, ion-item, *ngFor='let p of programPages', (click)='openModules($event, p)')
          ion-icon(name='{{p.icon}}', item-start)
          |           {{ p.title }}
      div(*ngIf='isAdminFlag')
        button(menuClose, ion-item, *ngFor='let p of adminPages_en', (click)='openPage(p)')
          ion-icon(name='{{p.icon}}', item-start)
          |         {{p.title}}
      button(menuClose, ion-item)
        ion-icon(name='warning', item-start)
        |           Report Problem
      button(menuClose, ion-item, (click)='closeSession()')
        ion-icon(name='exit', item-start)
        |           Logout
