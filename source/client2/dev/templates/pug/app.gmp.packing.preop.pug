include log-template-mixin.pug

div(id= "master-wrapper")
    div(class= "row")
        div(class= "col s12 m12 l12")
            h4()
                i.mdi.mdi-clipboard-outline
                = "Here goes the log name"

- var tabs = { tabs: [{href: "#manual_tab", text:"View Manual"}, {href: "#report_tab", text:"View Report"}, {href: "#logs_tab", text:"Capture Log"}]}

div(class= "row")
    +mz-tabs(tabs)
    div(id= "manual_tab" class= "col s12 m12 l12" style= "height: calc(100vh - 225px);")
        iframe(src= "http://localhost/espresso/data/documents/manuals/gmp/packing/preop/law/actual_manual.pdf" allowfullscreen webkitallowfullscreen width= "100%" height= "100%")
    div(id= "report_tab" class= "col s12 m12 l12")
        div(class= "card-panel white")
            div(class= "row")
                input()
            div(class= "row")
                input()
            div(class= "row")
                button(mz-button)= "Open Report"
                button(mz-button)= "View in PDF"
        mz-card.white('[hoverable]'= "true" style= "cursor: pointer; display: none;")
        mz-card.white('[hoverable]'= "true" style= "cursor: pointer; display: none;")
        mz-card.white( '[hoverable]'= "true" style= "cursor: pointer; display: none;")
    div(id= "logs_tab")= "Logs Tab"

