report-header([header]="header")
mz-card
  mz-card-content
    table(#report_body, style="display: block; overflow: scroll;")
      tbody
        tr
          th.productsColumn Item
          th.suppliersColumn Zone, Provider
          th.clientsColumn Days old
          th.waterColumn Quantity
          th.batchColumn Batch
          th.areaColumn Warehouse
          th.qualityColumn Quality
          th.originColumn Origin
          th.expiresColumn Date
          th.packingColumn Location
          th.actionColumn Action
          th.urlColumn Link to album
          th.notesColumn Notes
        tr(*ngFor="let entry of report.entries", '[ngClass]'="{ 'report-yellow': entry.action_id == 4, 'report-red': entry.action_id == 3 }")
          td.productsColumn {{entry.item}}
          td.suppliersColumn {{entry.vendor}}
          td.clientsColumn {{entry.age}}
          td.waterColumn {{entry.quantity}}
          td.batchColumn {{entry.batch}}
          td.areaColumn {{entry.warehouse}}
          td.qualityColumn {{entry.quality}}
          td.originColumn {{entry.origin}}
          td.expiresColumn {{entry.packed_date}}
          td.packingColumn {{entry.location}}
          td.actionColumn {{entry.action_name}}
          td.urlColumn {{entry.album_url}}
          td.notesColumn {{entry.notes}}