//- Este archivo representa la estructura base de la pagina HTML del sitio
//- Incluimos nuestra libreria de mixins
include globals.pug

//- Declaramos que la pagina es HTML5
doctype html

//- Declaramos que la pagina esta en espa√±ol
html(lang='es')
  head
    //- Requerido por Angular Router
    base(href='/')

    //- Declaramos que la pagina esta codificada con caracteres UTF-8
    meta(charset='UTF-8')

    //- Esta linea permite que la pagina sea responsiva
    meta(
      name='viewport'
      content='width=device-width, initial-scale=1.0'
    )

    //- Datos de la empresa que creo este software
    meta(
      name='author'
      content='Koi Software'
    )
    meta(
      name='author_webpage'
      content='https://www.facebook.com/KoiSoftware'
    )

    //- Importamos las hojas de estilo que necesita el projecto
    include stylesheets.pug
    
    //- Declaramos el favicon del sitio
    include favicon.pug

    //- El titulo de la pagina del sitio
    title='Food Safety Manual'

    //- Estilos de la splash screen
    style=' .centered { position: fixed; top: 50%; left: 50%; transform: translate(-50%, -50%); } .spinner { width: 100px; height: 100px; -webkit-animation: spin 2s linear infinite; -moz-animation: spin 2s linear infinite; animation: spin 2s linear infinite; } @-moz-keyframes spin { 100% { -moz-transform: rotate(-360deg); } } @-webkit-keyframes spin { 100% { -webkit-transform: rotate(-360deg); } } @keyframes spin { 100% { -webkit-transform: rotate(-360deg); transform: rotate(-360deg); } } .fader { width: 100px; height: 100px; opacity: 1; animation: fade 2s linear infinite; } @keyframes fade { 0%,100% { opacity: 0.2 } 50% { opacity: 1 } }'

  body
    //- Contenido principal del sitio
    app-root
      //-nav
        .nav-wrapper.green
      .centered
        img.spinner(src="assets/images/koi_spinner.png", width="100", height="100")

    //- Importamos todos los scripts del sitio
    include scripts.pug