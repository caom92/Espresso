ion-content
  form([formGroup]='gmpPackingGlassBrittleForm', (ngSubmit)='save(myForm)')
    ion-item
      ion-label {{ 'Log.time' | translate:lang }}
      ion-datetime(displayFormat='HH:mm', pickerFormat='HH:mm', formControlName='time')
    ion-list
      gmp-packing-glass-brittle-area(*ngFor='let area of log.areas; let i = index', [area]='area', [group]='gmpPackingGlassBrittleForm.controls.areas.controls[i]')
    ion-item
      ion-label(color='primary', floating) {{ 'Log.notes_of' | translate:lang }} {{log.log_name}}
      ion-textarea(formControlName='notes')
    div(text-center)
      button(ion-button, icon-end, round)
        | {{ 'Log.send_report' | translate:lang }}
        ion-icon(name='send')