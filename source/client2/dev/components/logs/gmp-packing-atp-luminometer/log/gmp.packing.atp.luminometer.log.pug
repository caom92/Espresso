include ../../../log-ionic-materialize.pug

+fullLogWrapper()
  div(*ngIf="showLog == true")
    block header
      log-header([log]="logHeaderData", [dateGroup]='captureForm')
    form([formGroup]='captureForm', (ngSubmit)='save(myForm)')
      //-gmp-packing-atp-luminometer-item(*ngFor='let item of log.items; let i = index', [item]='item', [itemGroup]='captureForm.controls.items.controls[i]', (addEntry)='addEntry($event, item.fields)', (removeEntry)='removeEntry($event)')
      block item
        gmp-packing-atp-luminometer-item(*ngFor='let item of log.items; let i = index', [item]='item', [itemGroup]='captureForm.controls.items.controls[i]', (addEntry)='addEntry($event)', (removeEntry)='removeEntry($event)')
      block buttonRow
        +updateLogButtonRow("{{ 'Log.send_report' | translate:lang }}", "{{ 'Log.finish_report' | translate:lang }}", "{{ 'Log.back_report' | translate:lang }}")