include ../../../log-ionic-materialize.pug

+fullLogWrapper()
  div(*ngIf="showLog == true")
    block header
      log-header([log]="logHeaderData", [dateGroup]='captureForm')
    form([formGroup]='captureForm', (ngSubmit)='save(myForm)')
      gmp-packing-ozone-water-item(*ngFor='let item of log.items; let i = index', [item]='item', [itemGroup]='captureForm.controls.items.controls[i]', (addEntry)='addEntry($event, item.fields)', (removeEntry)='removeEntry($event)')
      block buttonRow
        +sendLogButton("{{ 'Log.send_report' | translate:lang }}")