extends ../../report.common.pug

block report
  div(#report_body)
    table
      tbody
        tr
          td {{ 'Log.inspection_start_date' | translate:lang }}: {{report.inspection_start_date | l10nDate:defaultLocale:'longDate'}}
          td {{ 'Log.inspection_start_time' | translate:lang }}: {{report.inspection_start_time}}
        tr
          td {{ 'Log.inspection_end_date' | translate:lang }}: {{report.inspection_end_date | l10nDate:defaultLocale:'longDate'}}
          td {{ 'Log.inspection_end_time' | translate:lang }}: {{report.inspection_end_time}}
        tr
          td {{ 'Log.commodities' | translate:lang }}: {{report.commodities}}
        tr
          td {{ 'Log.pounds' | translate:lang }}: {{report.pounds}}
        tr
          td {{ 'Log.grower' | translate:lang }}: {{report.grower}}
        tr
          td {{ 'Log.block_code' | translate:lang }}: {{report.block_code}}
        tr
          td {{ 'Log.contact' | translate:lang }}: {{report.contact}}
        tr
          td {{ 'Log.location' | translate:lang }}: {{report.location}}
        tr
          td {{ 'Log.country' | translate:lang }}: {{report.country}}
    p()= ' '
    table
      tbody
        tr
          th PREGUNTA
          th ESTATUS
        ng-template(ngFor, let-item, [ngForOf]='report.items')
          tr(gap-packing-harvest-block-inspection-report-item, [item]='item')
          tr(gap-packing-harvest-block-inspection-report-comment, [item]='item', *ngIf='item.status === 1')