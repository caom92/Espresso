#master-wrapper
  .row
    .col.s12.m12.l12
      h4
        i.mdi.mdi-clipboard-outline
        | {{log_title}}
  div     
    mz-tab([fixedTabWidth]="'true'", [responsiveThreshold]="'true'")
      mz-tab-item([label]="'View Manual'")
        #manual_tab(style='height: calc(100vh - 225px);')
          iframe([src]='manualDirectory', allowfullscreen='allowfullscreen', webkitallowfullscreen='webkitallowfullscreen', width='100%', height='100%')
      mz-tab-item([label]="'View Report'")
        #report_tab
          report
          //-.card-panel.white
            form([formGroup]='reportDateRangeForm', (ngSubmit)='requestReports(myForm)')
              .row
                mz-datepicker-container.s12.m12.l12
                  i(mz-icon-mdi, mz-input-prefix, [icon]="'calendar'")
                  input(mz-datepicker, [label]="'Fecha de inicio'", type='text', formControlName='start_date', [options]='langManager.messages.global.datePickerConfig')
              .row
                mz-datepicker-container.s12.m12.l12
                  i(mz-icon-mdi, mz-input-prefix, [icon]="'calendar'")
                  input(mz-datepicker, [label]="'Fecha de cierre'", type='text', formControlName='end_date', [options]='langManager.messages.global.datePickerConfig')
              .row
                button(mz-button, type='submit') Open Report
                button(mz-button) View in PDF
          //-report-loader-card([displayDate]="'2017-12-05'")
            report-loader-card([displayDate]="'2017-11-05'")
            report-loader-card([displayDate]="'2017-10-05'")
            report-loader-card([displayDate]="'2017-09-05'")
            report-loader-card([displayDate]="'2017-08-05'")
      mz-tab-item([label]="'Capture Log'")
        #logs_tab
          gmp-packing-preop-log([log]='logData')
