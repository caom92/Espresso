include ../../../logmaster-common-mixins.pug

+espressoNavbar(true)

ion-content
  log-header([log]="logHeaderData")
  form([formGroup]='gmpPackingHandWashingForm', (ngSubmit)='save(myForm)')
    ion-list
      gmp-packing-hand-washing-item(*ngFor='let item of log.items; let i = index', [item]='item', [itemGroup]='gmpPackingHandWashingForm.controls.items.controls[i]')
      ion-item
        ion-label(color='primary', floating) {{ 'Log.notes_of' | translate:lang }} {{log.log_name}}
        ion-textarea(formControlName='notes')
    div(text-center)
      button(ion-button, icon-end, round)
        | {{ 'Log.send_report' | translate:lang }}
        ion-icon(name='send')