//-include ../../../logmaster-common-mixins.pug
include ../../../log-ionic-materialize.pug

div([formGroup]='areaForm')
  +card(true)
    +cardHeader("{{area.name}}")
    +cardContent()
      +timeInput(true, "{{ 'Log.time' | translate:lang }}", "time", null, null, "langManager.messages.global.timePickerConfig")
      +errorMessage("!areaForm.controls.time.valid", "{{ 'LogErrors.generic.time_required' | translate:lang }}")
      ng-template(ngFor, let-j='index', let-type, [ngForOf]='area.types')
        gap-packing-preop-type([type]='type')
        gap-packing-preop-item(*ngFor='let item of type.items; let i = index', [item]='item', [actions]='actions', [itemGroup]='areaForm.controls.items.controls[i + offset[j]]')
      +textArea("{{ 'Log.comments_of' | translate:lang }} {{area.name}}", "clipboard", "notes")
      //-+errorMessage('!areaForm.controls.notes.valid && areaForm.controls.notes.dirty', "{{ 'LogErrors.gap-packing-preop.comment_length' | translate:lang }}")
      +textArea("{{ 'Log.sanitization_person_of' | translate:lang }} {{area.name}}", "brush", "person_performing_sanitation")
      //-+errorMessage('!areaForm.controls.person_performing_sanitation.valid && (areaForm.controls.person_performing_sanitation.dirty)', "{{ 'LogErrors.gap-packing-preop.person_length' | translate:lang }}")