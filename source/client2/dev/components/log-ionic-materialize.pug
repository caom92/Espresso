mixin card(isHoverable)
  mz-card([hoverable]=isHoverable)&attributes(attributes)
    if block
      block

mixin cardHeader(contents)
  mz-card-title()&attributes(attributes)= contents
    if block
      block

mixin cardContent()
  mz-card-content()&attributes(attributes)
    if block
      block

mixin icon()
  i(mz-icon)&attributes(attributes)

mixin dateInput(showIcon, label, formControlName, id, placeholder, options)
  mz-datepicker-container()
    if (showIcon == true)
      i(mz-icon-mdi, mz-input-prefix, [icon]="'calendar'")
    input(mz-datepicker, label=label, type="text", id=id, placeholder=placeholder, [options]=options, formControlName=formControlName)&attributes(attributes)

mixin slimDateInput(showIcon, label, formControlName, id, placeholder, options)
  mz-datepicker-container(class='slim-div-parent')
    if (showIcon == true)
      i(mz-icon-mdi, mz-input-prefix, [icon]="'calendar'")
    input(mz-datepicker, label=label, type="text", id=id, placeholder=placeholder, [options]=options, formControlName=formControlName)&attributes(attributes)

