include ../../../templates/pug/globals.pug

h4 {{ 'Registers.registers' | translate:lang }}
//-mz-collection
  //-+routerLink("['/register', register.code]")(mz-collection-link, *ngFor='let register of registers')
  ng-template(ngFor, let-register, [ngForOf]='registers')
    mz-collection-item
      .title
        | {{register.name[lang]}}
      div(mz-secondary-content)
        i(mz-icon-mdi, [icon]='"star"')

.custom-collection
  //-+routerLink("['/registers', register.code]")(class='custom-item', *ngFor='let register of registers')
  .custom-item(*ngFor='let register of registers', [routerLink]="['/registers', register.code]")
    .custom-item-content.with-pending-message
      .row.no-margin-bottom
        .col.s12.m12.l12
          .title {{register.name[lang]}}
    .custom-collection-button(*ngIf='register.pending > 0')
      mz-badge(value='{{register.pending}}', [badgeClass]="'green'", caption="{{ 'Registers.pending' | translate:lang }}")