{
	"Ordered Inventory Table": {
		"prefix": "fsm-ordered-inventory",
		"description": "A FSM inventory table with standard fields",
		"body": [
			"CREATE TABLE `${prefix}_items` (",
			"\t`id` int(10) UNSIGNED NOT NULL,",
			"\t`zone_id` int(10) UNSIGNED NOT NULL,",
			"\t`is_active` tinyint(1) UNSIGNED NOT NULL DEFAULT '1',",
			"\t`position` int(10) UNSIGNED NOT NULL,",
			"\t`name` tinytext NOT NULL",
      ") ENGINE=InnoDB DEFAULT CHARSET=utf8;",
      "",
      "ALTER TABLE `${prefix}_items`",
      "\tADD PRIMARY KEY (`id`),",
      "\tADD KEY `zone_id` (`zone_id`);",
      "",
      "ALTER TABLE `${prefix}_items`",
      "\tMODIFY `id` int(10) UNSIGNED NOT NULL AUTO_INCREMENT, AUTO_INCREMENT=1;",
      "",
      "ALTER TABLE `${prefix}_items`",
      "\tADD CONSTRAINT `${prefix}_items_ibfk_1` FOREIGN KEY (`zone_id`) REFERENCES `zones` (`id`) ON UPDATE CASCADE;"
		]
	},
