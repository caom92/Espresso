#master-wrapper
  .row
    .col.s12.m12.l12
      h4
        i.mdi.mdi-clipboard-outline
        | {{log_title}}
.row
  .col.s12
    ul.tabs.tabs-fixed-width
      li.tab
        a(href='#manual_tab') View Manual
      li.tab
        a(href='#report_tab') View Report
      li.tab
        a(href='#logs_tab') Capture Log
  #manual_tab.col.s12.m12.l12(style='height: calc(100vh - 225px);')
    iframe([src]='manualDirectory', allowfullscreen='allowfullscreen', webkitallowfullscreen='webkitallowfullscreen', width='100%', height='100%')
  #report_tab.col.s12.m12.l12
    .card-panel.white
      form([formGroup]='reportDateRangeForm', (ngSubmit)='requestReports(myForm)')
        .row
          mz-input-container.s12.m12.l12
            i(mz-icon-mdi='', mz-input-prefix='', [icon]="'calendar'")
            input#start_date.datepicker(mz-input='', [label]="'Fecha de inicio'", type='text', formControlName='start_date', [(ngModel)]='start_date')
        .row
          mz-input-container.s12.m12.l12
            i(mz-icon-mdi='', mz-input-prefix='', [icon]="'calendar'")
            input#end_date.datepicker(mz-input='', [label]="'Fecha de cierre'", type='text', formControlName='end_date', [(ngModel)]='end_date')
        .row
          button(mz-button='mz-button', type='submit') Open Report
          button(mz-button='mz-button') View in PDF
    report-loader-card([displayDate]="'2017-12-05'")
    report-loader-card([displayDate]="'2017-11-05'")
    report-loader-card([displayDate]="'2017-10-05'")
    report-loader-card([displayDate]="'2017-09-05'")
    report-loader-card([displayDate]="'2017-08-05'")
  #logs_tab.col.s12.m12.l12
    gmp-packing-preop-log([log]='logData')
