  "Logs Basic Table": {
    "prefix": "fsm-log",
    "description": "A FSM log table with no depending item/area/types",
    "body": [
      "CREATE TABLE `${prefix}_logs` (",
      "\t`id` int(10) UNSIGNED NOT NULL,",
      "\t`capture_date_id` int(10) UNSIGNED NOT NULL,",
      ") ENGINE=InnoDB DEFAULT CHARSET=utf8;",
      "",
      "ALTER TABLE `${prefix}_logs`",
      "  ADD PRIMARY KEY (`id`),",
      "  ADD KEY `capture_date_id` (`capture_date_id`);",
      "",
      "ALTER TABLE `${prefix}_logs`",
      "  MODIFY `id` int(10) UNSIGNED NOT NULL AUTO_INCREMENT, AUTO_INCREMENT=1;",
      "",
      "ALTER TABLE `${prefix}_logs`",
      "  ADD CONSTRAINT `${prefix}_logs_ibfk_1` FOREIGN KEY (`capture_date_id`) REFERENCES `captured_logs` (`id`) ON UPDATE CASCADE;"
    ]
  },
