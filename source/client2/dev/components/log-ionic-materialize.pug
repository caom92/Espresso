mixin fileInput(label, accept, changeFunction, isMultiple)
  div(class="file-field input-field")
    div(class="btn")
      span()= label
      input(type="file", class="fileControl", (change)=changeFunction, accept=accept, multiple=isMultiple)&attributes(attributes)
    div(class="file-path-wrapper")
      input(class="file-path validate fileControl", type="text")&attributes(attributes)

mixin errorMessage(condition, message)
  small(style='color:red; font-weight: bold;', *ngIf!=condition)= message