include ../../../log-ionic-materialize.pug

+fullLogWrapper()
  log-header([log]="logHeaderData")
  form([formGroup]='gmpPackingGlassBrittleForm', (ngSubmit)='save(myForm)')
    +card()
      +cardContent()
        +timeInput(true, "{{ 'Log.time' | translate:lang }}", "time")
        +list()
          gmp-packing-glass-brittle-area(*ngFor='let area of log.areas; let i = index', [area]='area', [group]='gmpPackingGlassBrittleForm.controls.areas.controls[i]')
    +card()
      +cardContent()
        +textArea("{{ 'Log.notes_of' | translate:lang }} {{log.log_name}}", "clipboard", "notes")
    +sendLogButton("{{ 'Log.send_report' | translate:lang }}")