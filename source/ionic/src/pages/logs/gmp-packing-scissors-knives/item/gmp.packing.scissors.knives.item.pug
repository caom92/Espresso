include ../../../log-ionic-materialize.pug

div([formGroup]='itemForm')
  +listHeader("{{item.name}}")
  +timeInput(true, "{{ 'Log.time' | translate:lang }}", "time")
  +checkbox("{{ 'Log.approved' | translate:lang }}", false, "approved")
  +checkbox("{{ 'Log.returned_good_conditions' | translate:lang }}", false, "condition")
  +checkbox("{{ 'Log.sanitized_lubricated' | translate:lang }}", false, "is_sanitized")
  +textArea("{{ 'Log.corrective_action_of' | translate:lang }} {{item.name}}", "clipboard", "corrective_action")