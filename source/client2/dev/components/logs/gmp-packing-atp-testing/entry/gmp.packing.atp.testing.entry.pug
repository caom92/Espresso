include ../../../log-ionic-materialize.pug

+row()([formGroup]="entryForm")
  +col()(class="s6 m6 l6")
    +textInput("Item/Place/Equipment, etc.", null, "name", "text", null, null)
  +col()(class="s6 m6 l6")
    +timeInput(true, "Time", "time", null, null, "langManager.messages.global.timePickerConfig")
gmp-packing-atp-testing-test(*ngFor="let entry of entries; let i = index", [testGroup]="entryForm.controls.items.controls[i]", [testNumber]="entry", [entryNumber]="entryNumber")
+row()
  +col()(class="s1 m1 l1 offset-s10 offset-m10 offset-l10")
    button.green(mz-button, type='button', float='true', (click)='addItem()')
      i(mz-icon-mdi='', [icon]="'plus'")
  +col()(class="s1 m1 l1")
    button.red(mz-button, type='button', float='true', (click)='removeItem()', [disabled]="entries.length <= 1")
      i(mz-icon-mdi='', [icon]="'minus'")