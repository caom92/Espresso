mixin list()
  if block
    block

mixin listHeader(contents)
  h2()&attributes(attributes)= contents

mixin fullLogWrapper()
  if block
    block

mixin sendLogButton(label)
  div(class="row")
    div(class="center col s12 m12 l12")
      button(mz-button, [disabled]="captureForm.pristine")&attributes(attributes)= label
        i(mz-icon-mdi, [icon]="'send'")

mixin updateLogButtonRow(sendLabel, finishLabel, returnLabel)
  div(class='row')
    div(class="center col s12", [ngClass]="(this.log.report_id !== undefined && this.log.report_id !== null)?'m4 l4':'m6 l6'", style="margin-bottom: 20px;")
      button(mz-button, [disabled]="captureForm.pristine")= sendLabel + " "
        i(mz-icon-mdi, [icon]="'send'")
    div(class="center col s12 m4 l4", style="margin-bottom: 20px;", *ngIf='this.log.report_id !== undefined && this.log.report_id !== null')
      button(mz-button, [disabled]="!captureForm.pristine", type="button", (click)='finish()')= finishLabel + " "
        i(mz-icon-mdi, [icon]="'checkbox-marked-circle'")
    div(class="center col s12", [ngClass]="(this.log.report_id !== undefined && this.log.report_id !== null)?'m4 l4':'m6 l6'", style="margin-bottom: 20px;")
      button(mz-button, type="button", (click)='back()')= returnLabel + " "
        i(mz-icon-mdi, [icon]="'undo-variant'")

mixin authorizationButtonRow(sendLabel, authorizeLabel, deleteLabel, returnLabel)
  div(class="row")
    div(class="center col s12 m6 l3", style="margin-bottom: 20px;")
      button(mz-button, [disabled]="captureForm.pristine")= sendLabel + " "
        i(mz-icon-mdi, [icon]="'send'")
    div(class="center col s12 m6 l3", style="margin-bottom: 20px;")
      button(mz-button, type="button", (click)='authorize()', [disabled]="!captureForm.pristine")= authorizeLabel + " "
        i(mz-icon-mdi, [icon]="'checkbox-marked-circle'")
    div(class="center col s12 m6 l3", style="margin-bottom: 20px;")
      button(mz-button, type="button", (click)='delete()')= deleteLabel + " "
        i(mz-icon-mdi, [icon]="'delete'")
    div(class="center col s12 m6 l3", style="margin-bottom: 20px;")
      button(mz-button, type="button", (click)='back()')= returnLabel + " "
        i(mz-icon-mdi, [icon]="'undo-variant'")

mixin addItemButton()
  button(mz-button, float="true")&attributes(attributes)
    i(mz-icon-mdi, [icon]="'plus'")

//- User Input

mixin label(label, icon, color)
  span(style="font-size: 24px;")
    if (icon)
      - label = label + " "
      = label
      i(mz-icon-mdi, mz-input-prefix, icon=icon)
    else
      = label

mixin textInput(label, icon, formControlName, type, id, placeholder)
  mz-input-container
    if (icon)
      i(mz-icon-mdi, mz-input-prefix, icon=icon)
    input(mz-input, label=label, formControlName=formControlName, id=id, placeholder=placeholder, type=type)&attributes(attributes)

mixin slimTextInput(label, icon, formControlName, type, id, placeholder)
  mz-input-container(class='slim-div-parent')
    if (icon)
      i(mz-icon-mdi, mz-input-prefix, icon=icon)
    input(mz-input, label=label, formControlName=formControlName, id=id, placeholder=placeholder, type=type)&attributes(attributes)

mixin textInputLine(label, placeholder, icon, formControlName, type, id)
  +textInput(label, icon, formControlName, type, id, placeholder)

mixin textArea(label, icon, formControlName, id, placeholder)
  mz-textarea-container
    if (icon)
      i(mz-icon-mdi, mz-input-prefix, icon=icon)
    textarea(mz-textarea, label=label, formControlName=formControlName, id=id, placeholder=placeholder)&attributes(attributes)

mixin slimTextArea(label, icon, formControlName, id, placeholder)
  mz-textarea-container(class='slim-div-parent')
    if (icon)
      i(mz-icon-mdi, mz-input-prefix, icon=icon)
    textarea(mz-textarea, label=label, formControlName=formControlName, id=id, placeholder=placeholder)&attributes(attributes)

mixin checkbox(label, icon, formControlName, id)
  mz-checkbox-container()&attributes(attributes)
    input(mz-checkbox, label=label, formControlName=formControlName, type="checkbox", id=id, filledIn="true")

mixin captureCheckbox(label, id, func)
  mz-checkbox-container()&attributes(attributes)
    input(mz-checkbox, label=label, type="checkbox", id=id, filledIn="true", (change)=func, checked)

mixin radioGroup(label, icon, formControlName)
  div
    label()= label
    if block
      block

mixin radio(label, icon, value, checked, disabled, id, name)
  mz-radio-button-container
    input(mz-radio-button, label=label, value=value, checked=checked, disabled=disabled, id=id, name=name, type="radio")&attributes(attributes)

mixin select(label, icon, formControlName, interface, id, placeholder)
  mz-select-container
    select(mz-select, label=label, id=id, placeholder=placeholder, formControlName=formControlName)&attributes(attributes)
      if block
        block

mixin option(label, value, selected, disabled)
  option([ngValue]=value, selected=selected, disabled=disabled)&attributes(attributes)= label

