ion-content
  form([formGroup]='gmpPackingColdRoomTempForm', (ngSubmit)='save(myForm)')
    ion-item
      ion-label {{ 'Log.time' | translate:lang }}
      ion-datetime(displayFormat='HH:mm', pickerFormat='HH:mm', formControlName='time')
    ion-list
      gmp-packing-cold-room-temp-item(*ngFor='let item of log.items; let i = index', [item]='item', [itemGroup]='gmpPackingColdRoomTempForm.controls.items.controls[i]')
    div(text-center)
      button(ion-button, icon-end, round)
        | {{ 'Log.send_report' | translate:lang }}
        ion-icon(name='send')