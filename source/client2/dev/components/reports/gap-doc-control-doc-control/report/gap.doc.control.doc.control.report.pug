extends ../../report.common.pug

block report
  table(#report_body)
    thead
      tr
        th.userColumn {{ 'Log.users' | translate:lang }}
        th.dateColumn {{ 'Log.date' | translate:lang }}
        th.notesColumn {{ 'Log.notes' | translate:lang }}
        th.urlColumn {{ 'Log.external_url' | translate:lang }}
    tbody
      tr
        td.logTitle([colSpan]='4') {{report.reports.document.name}}
      tr
        td.userColumn {{report.reports.document.entries.employee}}
        td.dateColumn {{report.reports.document.entries.date}}
        td.notesColumn {{report.reports.document.entries.notes}}
        td.urlColumn
          a(href="{{report.reports.document.entries.additional_info_url}}", target='_blank', *ngIf="report.reports.document.entries.additional_info_url != null && report.reports.document.entries.additional_info_url != undefined && report.reports.document.entries.additional_info_url != ''") {{report.reports.document.entries.additional_info_url}}
          span(*ngIf="report.reports.document.entries.additional_info_url == null || report.reports.document.entries.additional_info_url == undefined || report.reports.document.entries.additional_info_url == ''") N/A
  div(*ngIf="entry == true")
    a(*ngFor="let file of report.reports.document.entries.files", [href]="'http://localhost/espresso/data/documents/gap/doc_control/doc_control/' + file", target="_blank") {{file}}
    img(*ngFor="let image of report.reports.document.entries.pictures", [src]="'http://localhost/espresso/data/images/gap/doc_control/doc_control/' + image", width="100%")