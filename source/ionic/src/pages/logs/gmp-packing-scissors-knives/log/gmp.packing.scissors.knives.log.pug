ion-content
  form([formGroup]='gmpPackingScissorsKnivesForm', (ngSubmit)='save(myForm)')
    ion-list
      gmp-packing-scissors-knives-item(*ngFor='let item of log.items; let i = index', [item]='item', [itemGroup]='gmpPackingScissorsKnivesForm.controls.items.controls[i]')
      ion-item
        ion-label(color='primary', floating) {{ 'Log.notes_of' | translate:lang }} {{log.log_name}}
        ion-textarea(formControlName='notes')
    div(text-center)
      button(ion-button, icon-end, round)
        | {{ 'Log.send_report' | translate:lang }}
        ion-icon(name='send')