include ../../../log-ionic-materialize.pug

ion-content
  log-header([log]="logHeaderData")
  form([formGroup]='gmpPackingThermoCalibrationForm', (ngSubmit)='save(myForm)')
    +card()
      +cardContent()
        ion-item
          ion-label {{ 'Log.time' | translate:lang }}
          ion-datetime(displayFormat='HH:mm', pickerFormat='HH:mm', formControlName='time')
        ion-list
          gmp-packing-thermo-calibration-item(*ngFor='let item of log.items; let i = index', [item]='item', [itemGroup]='gmpPackingThermoCalibrationForm.controls.items.controls[i]')
    div(text-center)
      button(ion-button, icon-end, round)
        | {{ 'Log.send_report' | translate:lang }}
        ion-icon(name='send')