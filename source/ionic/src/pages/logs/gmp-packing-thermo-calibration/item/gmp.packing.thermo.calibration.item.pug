include ../../../log-ionic-materialize.pug

+card()([formGroup]='itemForm')
  +cardContent()
    +textInputLine("{{item.name}}", "{{ 'Log.ice_point_test' | translate:lang }}", "ios-thermometer", "test", "number")
    +checkbox("{{ 'Log.thermo_calibration' | translate:lang }}", false, "calibration")
    +checkbox("{{ 'Log.sanitized' | translate:lang }}", false, "sanitization")
    +textArea("{{ 'Log.deficiencies_of' | translate:lang }} {{item.name}}", "clipboard", "deficiencies")
    +textArea("{{ 'Log.corrective_action_of' | translate:lang }} {{item.name}}", "clipboard", "corrective_action")