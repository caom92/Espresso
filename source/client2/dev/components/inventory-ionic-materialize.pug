mixin inventoryHandler()
  td.handle
    i.handle(mz-icon-mdi, [align]="'center'", [icon]="'cursor-move'")

mixin inventoryColumn(content)
  td()= content

mixin inventoryToggle()
  td
    mz-switch-container
      input(mz-switch, type="checkbox", [(ngModel)]="toggleValue", (click)="toggleItem(item)")

mixin inventoryItemWrapper()
  if block
    block

mixin inventoryTitleHandler()
  th

mixin inventoryTitleColumn(content)
  th()= content

mixin inventoryTitleToggle()
  th Estado

mixin inventoryTitleWrapper()
  thead
    tr
      if block
        block

mixin inventoryItemComponent(suffix, ngForLet, ngForSource)
  - attributes[suffix + '-inventory-item'] = true
  - let temp = {}
  - temp['let-' + ngForLet] = true
  ng-template(ngFor, [ngForOf]=ngForSource)&attributes(temp)
    tr()&attributes(attributes)

