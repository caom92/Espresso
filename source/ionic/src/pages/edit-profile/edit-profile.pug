ion-header
  ion-navbar(color='secondary')
    button(ion-button, menuToggle='en', [hidden]='!isEnglish()')
      ion-icon(name='menu')
    button(ion-button, menuToggle='es', [hidden]='!isSpanish()')
      ion-icon(name='menu')
    ion-grid
      ion-row
        ion-col
          ion-title
            | {{ 'Edit Profile' | translate:lang }}
        ion-col
          ion-list
            ion-item([hidden]='true')
              ion-select(#zone_select, interface='popover')
                ion-option(value='BCN', selected) BCN
                ion-option(value='LAW') LAW
                ion-option(value='PES') PES
                ion-option(value='ZAR') ZAR
                ion-option(value='ETC') ETC
        ion-col
          ion-list
            ion-item([hidden]='true')
              ion-select(#language_select, interface='action-sheet', (ionChange)='onLanguageChange($event)')
                ion-option(value='en') {{ 'English' | translate:lang }}
                ion-option(value='es') {{ 'Spanish' | translate:lang }}
        button(ion-button, icon-24, clear, color='light', (click)='openZoneSelector()', [hidden]='!isDirector()')
          ion-icon(name='map')
        button(ion-button, icon-24, clear, color='light', (click)='openLanguageSelector()')
          ion-icon(name='globe')

ion-content(padding)
  ion-item(text-wrap)
    ion-icon(name='contact', item-start)
    h1 {{ 'User Profile' | translate:lang }}
  ion-list
    ion-item
      ion-label(floating) {{ 'Username' | translate:lang }}
      ion-input(type='text', [(ngModel)]='username', [readonly]='true')
    ion-item
      ion-label(floating) {{ 'EmployeeID' | translate:lang }}
      ion-input(type='text', [(ngModel)]='employeeID', [readonly]='true')
    ion-item
      ion-label(floating) {{ 'Name' | translate:lang }}
      ion-input(type='text', [(ngModel)]='realname', [readonly]='true')
  ion-item-divider
  ion-item(text-wrap)
    ion-icon(name='lock', item-start)
    h1 {{ 'Change Password' | translate:lang }}
  form([formGroup]='changePassword', (ngSubmit)='onChangePasswordFormSubmit()')
    ion-list
      ion-item
        ion-label(floating) {{ 'New Password' | translate:lang }}
        ion-input(type='password', formControlName='newPassword')
      ion-item
        ion-label(floating) {{ 'Check Password' | translate:lang }}
        ion-input(type='password', formControlName='checkPassword')
      ion-item
        ion-label(floating) {{ 'Current Password' | translate:lang }}
        ion-input(type='password', formControlName='currentPassword')
      ion-item
        div(text-center)
          button(ion-button, icon-end, type='submit', default)
            | {{ 'Change' | translate:lang }}
            ion-icon(name='send')
  ion-item-divider
  ion-item(text-wrap)
    ion-icon(name='person', item-start)
    h1 {{ 'Change Username' | translate:lang }}
  form([formGroup]='changeUsername', (ngSubmit)='onChangeUsernameFormSubmit()')
    ion-list
      ion-item
        ion-label(floating) {{ 'New Username' | translate:lang }}
        ion-input(type='text', formControlName='newUsername')
      ion-item
        ion-label(floating) {{ 'Current Password' | translate:lang }}
        ion-input(type='password', formControlName='currentPassword')
      ion-item
        div(text-center)
          button(ion-button, icon-end, type='submit', default)
            | {{ 'Change' | translate:lang }}
            ion-icon(name='send')